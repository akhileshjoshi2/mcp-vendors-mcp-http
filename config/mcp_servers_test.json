{
  "servers": {
    "openai": {
      "name": "OpenAI Server",
      "description": "Provides OpenAI GPT and embedding services",
      "command": "python",
      "args": ["openai_server/server.py"],
      "cwd": ".",
      "port": 8001,
      "health_endpoint": "/health",
      "tools": ["openai_chat", "openai_embed", "list_models"],
      "resources": ["models"],
      "required_env": ["OPENAI_API_KEY"]
    },
    "utility": {
      "name": "Utility Server",
      "description": "Provides non-AI utility tools",
      "command": "python",
      "args": ["utility_server/server.py"], 
      "cwd": ".",
      "port": 8004,
      "health_endpoint": "/health",
      "tools": ["web_search", "get_weather"],
      "resources": [],
      "required_env": ["WEATHER_API_KEY"]
    }
  },
  "orchestrator": {
    "port": 8000,
    "default_timeout": 30,
    "retry_attempts": 3,
    "health_check_interval": 30
  }
}
